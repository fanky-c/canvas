extends ../../templates/layout

block title
    | 文字粒子
block head
    link(rel="stylesheet", href="../../css/canvas16.css", type="text/css")

block body  
     canvas(id='canvas')
         p you browser not support canvas!

     div#control
         div
            h1 文字粒子
            p(style="margin:0 0 20px 10px")
              span#ball 圆形
              span#rect 方块
            p 文字
            input(type='text', id ="message",value='fanky')
            p 重力
            input(type='range', id ="gra" value='0' ,min='-1',max='1', step='0.1',onchange='changeV()')
            p 周期
            input(type='range', id ="dur" value='0.4',min='0.1',max='0.99', step='0.01',onchange='changeV()')  
            p 速度
            input(type='range', id ="speed" value='0.1',min='0',max='5', step='0.01',onchange='changeV()') 
            p 半径
            input(type='range', id ="rad" value='2',min='1.8',max='20', step='0.01',onchange='changeV()')  
            p 分辨率
            input(type='range', id ="res" value='10',min='3',max='20', step='1',onchange='changeV()')

          div#btn
              span
              span
              span

     p#tips *** 点击菜单按钮，滑出侧边栏，进行参数控制 ***                                                    



append script
    script(src="../../js/lib/requirejs/require.js", data-main="./p-canvas16.js")          
